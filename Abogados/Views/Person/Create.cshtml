@model Abogados.Models.PersonModel

@{
    ViewBag.Title = "Create";
}

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem { Text = "Exemplo1", Value = "Exemplo1" });
    listItems.Add(new SelectListItem { Text = "Exemplo2", Value = "Exemplo2" });
    listItems.Add(new SelectListItem { Text = "Exemplo3", Value = "Exemplo3" });
}

<h2 >Crear</h2> 
@Html.DropDownList("Ejemplo", new SelectList(listItems, "Value", "Text"))

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h1> </h1>
        <h4>PersonModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })        
        @Html.HiddenFor(model => model.PersonId)

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Name">Nombre</label>
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="col-md-2"> </div>
            <div class="col-md-2">
                <label for="model.LastName">Apellido</label>
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>
        <h1>  </h1>
        <div class="form-group">
            <div class="col-md-2">
                <label for="model.DocType">Tipo de Documento</label>
                @Html.EditorFor(model => model.DocType.DocType)
                @Html.ValidationMessageFor(model => model.DocType.DocType)
            </div>
            <div class="col-md-2"> </div>
            <div class="col-md-2">
                <label for="model.DocNumber">Numero de Documento</label>
                @Html.EditorFor(model => model.DocNumber)
                @Html.ValidationMessageFor(model => model.DocNumber)
            </div>
        </div>
        <h1> </h1>
        <div class="form-group">
            <div class="col-md-2">
                <label for="model.E_Mail">Correo Electrónico</label>
                @Html.EditorFor(model => model.E_Mail)
                @Html.ValidationMessageFor(model => model.E_Mail)
            </div>
            <div class="col-md-2"> </div>
            <div class="col-md-2">
                <label for="model.PhoneNumber">Teléfono</label>
                @Html.EditorFor(model => model.PhoneNumber)
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
        </div>
        <h1> </h1>
        <div class="form-group">
            <div class="col-md-2">
                <label for="model.BirthDate">Fecha de Nacimiento</label>
                @Html.EditorFor(model => model.BirthDate)
                @Html.ValidationMessageFor(model => model.BirthDate)
            </div>
            <div class="col-md-2"> </div>
            <div class="col-md-2">
                <label for="model.Genre">Género</label>
                @Html.EditorFor(model => model.Genre)
                @Html.ValidationMessageFor(model => model.Genre)
            </div>
        </div>
        <h1></h1>
        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Nationality">País</label>
                @Html.EditorFor(model => model.Nationality)
                @Html.ValidationMessageFor(model => model.Nationality)
            </div>
            <div class="col-md-2"> </div>
            <div class="col-md-2">
                <label for="model.Province">Provincia</label>
                @Html.EditorFor(model => model.Province)
                @Html.ValidationMessageFor(model => model.Province)
            </div>
        </div>
        <h1></h1>
        <div class="form-group">
            <div class="col-md-2">
                <label for="model.City">Ciudad</label>
                @Html.EditorFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </div>
        </div>
        <h1></h1>
        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Description">Descripción</label>
                @Html.TextAreaFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <h1></h1>
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
